@model RTI.ModelingSystem.Core.DBModels.customer
@{
    Layout = null;
}

    <div class="row">
        <div class="form-group col-xs-6">
            @Html.DropDownListFor(model => model.customerID, Model.customerList, new { @id = "Customer", @class = "form-control" })
        </div>
    </div>
    <div id="EditableDiv">
        <div class="row"> 
            <div class="form-group col-xs-6">
                @Html.Label("Customer")
                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", @readonly = "true", @id = "CustomerName" } })
                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
            </div>
            <div class="form-group col-xs-6">
                <label for="exampleInputPassword1">Plant</label>
                @Html.EditorFor(model => model.plant, new { htmlAttributes = new { @class = "form-control", @maxlength = "45", @placeholder = "Type plant name..." } })
                @Html.ValidationMessageFor(model => model.plant, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="form-group col-xs-6">
                <label for="exampleInputPassword1">State</label>
                @Html.DropDownListFor(model => model.state, Model.StateList, "-- Select State --", new { @class = "form-control", @id = "State" })
                @Html.ValidationMessageFor(model => model.state, "", new { @class = "text-danger" })
            </div>
            @Html.TextBoxFor(model => model.city, new { @id = "SelectedCity", @style = "display:none;" })
            <div class="form-group col-xs-6">
                <label for="exampleInputPassword1">City</label>
                @Html.DropDownListFor(model => model.city, Model.CityList, "-- Select City --", new { @class = "form-control", @id = "City" })
                @Html.ValidationMessageFor(model => model.city, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="form-group col-xs-6">
                <label for="exampleInputPassword1"># of trains in system</label>
                @Html.DropDownListFor(model => model.num_trains, Model.TrainList, new { @class = "form-control", @id = "TrainNum" })
                @Html.ValidationMessageFor(model => model.num_trains, "", new { @class = "text-danger" })
            </div>
        </div>
       </div>

<script src="~/Scripts/jquery-2.1.4.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>