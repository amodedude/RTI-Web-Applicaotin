<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/angular.js"></script>
<script src="~/Scripts/angular-route.js"></script>
<script src="~/Scripts/app/app.js"></script>
<script src="~/Scripts/app/services/customerDetailsService.js"></script>
<script src="~/Scripts/app/controller/ctrlCustomerDetails.js"></script>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body data-ng-app="rtiCustomerApp">
    <div ng-controller="customerDetailsController">
        <table><tr><td height="10px"></td></tr></table>
        <table cellpadding="4" cellspacing="4" width="90%" align="center"
               style="background-color: skyblue; border:solid 2px red; padding-top:20px;">
            <thead>
                <tr style="background-color:#F5F5F5;">
                    <th>Customer ID</th>
                    <th>Name</th>
                    <th>plant</th>
                    <th>city</th>
                   
                </tr>
            </thead>
            <tbody>
                <tr data-ng-model="customers">
                    <td>{{customers.customerID}}</td>
                    <td>{{customers.name}}</td>
                    <td>{{customers.city}}</td>


                </tr>
            </tbody>
        </table>
    </div>
</body>
</html>
